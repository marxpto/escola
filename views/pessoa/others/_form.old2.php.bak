$script = <<< JS
$('form#{$model->formName()}').on('beforeSubmit', function(e)
{
    var \$form = $(this);
	
	$.post(
        \$form.attr("action"), 
        \$form.serialize()
    )
    .done(function(result) {
        if(result == 1)
        {
            $(document).find('#modal').modal('hide');
            $(\$form).trigger("reset");
			$.pjax.reload({container:'#PessoaGrid'});
        } else {
            $("#message").html(result);
        }
    })
    .fail(function()
    {
        console.log("server error");
    });
    return false;
});
JS;
$this->registerJs($script);

